FROM node:20-alpine AS build

WORKDIR /app

ARG VITE_BACKEND_URL
ARG VITE_OLLAMA_BASE_URL
ARG VITE_OLLAMA_MODEL
ARG VITE_OLLAMA_TOOL_MODEL
ARG VITE_OLLAMA_TOOL_MODEL_FALLBACK
ARG VITE_SQL_AGENT_ENABLED

ENV VITE_BACKEND_URL=${VITE_BACKEND_URL}
ENV VITE_OLLAMA_BASE_URL=${VITE_OLLAMA_BASE_URL}
ENV VITE_OLLAMA_MODEL=${VITE_OLLAMA_MODEL}
ENV VITE_OLLAMA_TOOL_MODEL=${VITE_OLLAMA_TOOL_MODEL}
ENV VITE_OLLAMA_TOOL_MODEL_FALLBACK=${VITE_OLLAMA_TOOL_MODEL_FALLBACK}
ENV VITE_SQL_AGENT_ENABLED=${VITE_SQL_AGENT_ENABLED}

COPY package.json package-lock.json ./
RUN rm -f package-lock.json
RUN npm install

COPY . .
RUN npm run build

FROM nginx:1.27-alpine

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
