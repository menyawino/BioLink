{
  "name": "ehvol-sqlserver-connector",
  "config": {
    "connector.class": "io.debezium.connector.sqlserver.SqlServerConnector",
    "database.hostname": "${SQLSERVER_CONNECT_HOST}",
    "database.port": "${SQLSERVER_PORT}",
    "database.user": "${SQLSERVER_USER}",
    "database.password": "${SQLSERVER_PASSWORD}",
    "database.names": "${SQLSERVER_DB}",
    "database.trustServerCertificate": "${SQLSERVER_TRUST_CERT}",
    "topic.prefix": "EHVol",
    "table.include.list": "dbo.patients",
    "snapshot.mode": "initial",
    "tombstones.on.delete": "false",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schemahistory.ehvol"
  }
}
